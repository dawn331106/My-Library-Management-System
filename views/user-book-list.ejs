</head>
  <body>
      <header>
      <div class="headbar">
        <ul>
          <li><a href="/">Logout</a></li>
          <%if(username.length!=0){
						username.forEach(function(data){
					 %>
					<li><a href="/profile/<%=data.username %>">Profile</a></li>
          <li>
            <form action="/searchprofile/<%=data.username %>" method="post">
            <input name="reg_no" style="font-size: 14px; margin: 0px; padding: 0px; background-color: white;" type="text" placeholder="Reg_no....">
            <button style="font-size: 14px; margin: 0px; padding: 0px;" type="submit"><i class="fa fa-search"></i></button></li>
            </form>
            <% })} %>
        </ul>
      </div>
      <div class="logo">
        <img src="../public/images/logo.png">
        <h1 style="color: black;">LIBRARY MANAGEMENT</h1>
      </div>
        <nav>
          <ul>
            <%if(username.length!=0){
              username.forEach(function(data){
             %>
            <li><a href="/user/<%= data.username %>">HOME</a></li>
            <li><a style="text-decoration:none;border-bottom: 2px solid blue;" href="/userbooklist/<%=data.username %>">BOOKS</a></li>
            <li>
              <div class="dropdown1">
                <a href="">SEARCH-BOOK<i class="fa fa-caret-down"></i>
                </a>
                <div class="dropdown-content1">
                  <a href="/bookname/<%=data.username %>">By Name</a>
							   	<a href="/bookauthor/<%=data.username %>">By Author</a>
								  <a href="/bookisbn/<%=data.username %>">By ISBN</a>
                </div>
                </div> 
            </li>
            <% })} %>
          </ul>
        </nav>
      </header>
    <div style="min-height: 500px;">
        <div class="row" style="width: 80%; margin: 0 auto;">
          <%
          if(imageData.length!=0){
          imageData.forEach(function(data){
          %>
            <div class="col-sm-2">
              <%if(username.length!=0){
                username.forEach(function(data1){
               %>
                <form action="/userbookdetails/<%=data1.username%>" method="POST">
                  <% })} %>
                <button name="Name" value="<%=data.Name; %>" type="submit">
                <img src="../public/images/covers/<%=data.image_name %>" height="100px" width="100px">
                <h1><%=data.Name; %></h1>
                </button> 
                </form>
            </div>
            <%  }) %>
          <% } %>
        </div>
    </div>
  </body>
