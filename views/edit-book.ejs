	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
	<div class="wrapper">
		<header>
		<div class="headbar">
			<ul>
				<li><a href="/">Logout</a></li>
			</ul>
		</div>
		<div class="logo">
			<img src="../public/images/logo.png">
			<h1 style="color: black;">LIBRARY MANAGEMENT</h1>
		</div>
			<nav>
				<ul>
					<li><a href="/books/home">HOME</a></li>
					<li><a href="/books/book-list">BOOKS</a></li>
					<li><a href="/books/form">INSERT</a></li>
					<li>
						<div class="dropdown1">
							<a href="">SEARCH<i class="fa fa-caret-down"></i>
							</a>
							<div class="dropdown-content1">
							  <a href="/books/search-by-name">By Name</a>
							  <a href="/books/search-by-author">By Author</a>
							  <a href="/books/search-by-isbn">By ISBN</a>
							</div>
						  </div> 
					</li>
					<li><a href="/books/bookissue">ISSUE</a></li>
					<li><a href="/books/issue-list">ISSUE-LIST</a></li>
					<li><a href="/books/returnbook">RETURN</a></li>
				</ul>
			</nav>
		</header>
		<section>
			<br>
        <div class="book-form">
          <h2 style="text-align: center; font-size: x-large;">Edit book data</h2>
          <%if(userData.length!=0){
            var i=1;
            userData.forEach(function(data){
              %>
          <form action="/update/<%=data.ISBN%>" method="POSt">
                <label>ISBN</label>
                <input type="text" value="<%= data.ISBN %>" name="ISBN" required>
                <label>Book Name</label>
                <input type="text" value="<%= data.Name %>" name="Name" required>
                <label>Author</label>
                <input type="text" value="<%= data.Author %>" name="Author" required>
                <label>Published year</label>
                <input type="number" value="<%= data.Published %>" name="Published" required>
                <label>Pages</label>
                <input type="number" value="<%= data.Pages %>" name="Pages" required>
                <label>Quantity</label>
                <input type="number" value="<%= data.Quantity %>" name="Quantity" required>
                <% i++ })} %>
                <button class="form-button" type="submit">Submit</button>
        </div>
		</section>
	</div>
</body>
