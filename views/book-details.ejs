<style type="text/css" media="screen">
    .outer {background-color:lightgray; padding: 25px;}
    .outer > * {
      display:inline-block; 
      vertical-align:middle;
    } 
    .one {width:350px; height:400px;}
	.two {width:320px; height:350px; font-size: 22px;}

    </style>
<body>
	<div class="wrapper">
		<header>
		<div class="headbar">
			<ul>
				<li><a href="/">Logout</a></li>
			</ul>
		</div>
		<div class="logo">
			<img src="../public/images/logo.png">
			<h1 style="color: black;">LIBRARY MANAGEMENT</h1>
		</div>
			<nav>
				<ul>
					<li><a href="/books/home">HOME</a></li>
					<li><a style="text-decoration:none;border-bottom: 2px solid blue;" href="/books/book-list">BOOKS</a></li>
					<li><a href="/books/form">INSERT</a></li>
					<li>
						<div class="dropdown1">
							<a href="">SEARCH<i class="fa fa-caret-down"></i>
							</a>
							<div class="dropdown-content1">
							  <a href="/books/search-by-name">By Name</a>
							  <a href="/books/search-by-author">By Author</a>
							  <a href="/books/search-by-isbn">By ISBN</a>
							</div>
						  </div> 
					</li>
					<li><a href="/books/bookissue">ISSUE</a></li>
                    <li><a href="/books/issue-list">ISSUE-LIST</a></li>
                    <li><a href="/books/returnbook">RETURN</a></li>
				</ul>
			</nav>
		</header>
		<section>
			<br>
		<div style="width: 50%; padding-top: 70px; padding-left: 20px;">
            <div class="outer">
            <%
                if(userData.length!=0){
                userData.forEach(function(data){
                %>
                <div class="one">
                <img src="../public/images/covers/<%=data.image_name; %>" width="350px" height="400px">
                </div>
                <div class="two" style="padding: 50px 0;">
                    <h1>ISBN No : <%=data.ISBN; %></h1>
                    <h1>Name : <%=data.Name; %></h1>
                    <h1>Author : <%=data.Author; %></h1>
                    <h1>Published : <%=data.Published; %></h1>
                    <h1>Pages : <%=data.Pages; %></h1>
					<h1>Quantity : <%=data.Quantity; %></h1>
					<br>
					<a href="/books/<%=data.ISBN%>" style="color: darkblue;" >Edit</a>
                    <a href="/delete/<%=data.ISBN%>" style="color: darkblue; padding-left: 50px;"> Delete </a>
                </div>
             <% }) %>
             <% } %>
		</div>
	</section>
	</div>
</body>
