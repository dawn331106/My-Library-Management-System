<!DOCTYPE html>
<html>
<head>
	<title>
		Online Library Management System
	</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
	<link rel="stylesheet" type="text/css" href="../public/stylesheets/style.css">
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
	<div class="wrapper">
		<header>
		<div class="headbar">
				<ul>
					<li><a href="/">Logout</a></li>
					<%if(username.length!=0){
						username.forEach(function(data){
					 %>
					<li><a href="/profile/<%=data.username %>">Profile</a></li>
                    <li>
                    <form action="/searchprofile/<%=data.username %>" method="post">
                    <input name="reg_no" style="font-size: 14px; margin: 0px; padding: 0px; background-color: white;" type="text" placeholder="Reg_no....">
                    <button style="font-size: 14px; margin: 0px; padding: 0px;" type="submit"><i class="fa fa-search"></i></button></li>
                    </form>
					<% })} %>
				</ul>
		</div>
		<div class="logo">
			<img src="../public/images/logo.png">
			<h1 style="color: black;">LIBRARY MANAGEMENT</h1>
		</div>
			<nav>
				<ul>
					<%if(username.length!=0){
						username.forEach(function(data){
					 %>
					<li><a style="text-decoration:none;border-bottom: 2px solid blue;" href="/user/<%= data.username %>">HOME</a></li>
					<li><a href="/userbooklist/<%= data.username %>">BOOKS</a></li>
					<li>
						<div class="dropdown1">
							<a href="">SEARCH-BOOK<i class="fa fa-caret-down"></i>
							</a>
							<div class="dropdown-content1">
								<a href="/bookname/<%=data.username %>">By Name</a>
								<a href="/bookauthor/<%=data.username %>">By Author</a>
								<a href="/bookisbn/<%=data.username %>">By ISBN</a>
							</div>
						  </div> 
					</li>
					<% })} %>
				</ul>
			</nav>
		</header>
		<section>
			<%if(username.length!=0){
				username.forEach(function(data){
			 %>
            <marquee style="color: #FFFFFF; background-color: blue; height: 30px; font-size: 25px;
            font-family: Book Antiqua;" behavior="scroll"  > Welcome back <%= data.first_name %>! Have a nice day.</marquee>
			<% })} %>
		<div class="sec_img">
			<br><br><br>
			<div class="box">
				<br><br><br><br>
				<h1 style="text-align: center; font-size: 30px; font-family: 'Courier New', monospace;">Welcome to library</h1><br><br>
				<h1 style="text-align: center;font-size: 20px; font-family: 'Courier New',monospace;">Everything you need for better future and success has already been written.
				 And guess what? All you have to do is go to the Library. </h1><br>
			</div>
		</div>
		</section>	
	</div>
</body>
